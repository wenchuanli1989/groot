{
  "name": "groot",
  "author": "liussdne@gmail.com",
  "license": "ISC",
  "description": "component assembly workshop",
  "workspaces": [
    "packages/core",
    "packages/common",
    "packages/web-runtime",
    "packages/react"
  ],
  "scripts": {
    "groot:examples": "cd ./examples/webpack-demo && npm start",
    "groot:pangu": "cd ./pangu && npm start",
    "groot:studio": "cd ./packages/studio && npm start",
    "groot:core": "cd ./packages/ext-core && npm start",
    "groot:web-visual": "cd ./packages/ext-web-visual && npm start",
    "groot:prop-setter": "cd ./packages/ext-prop-setter && npm start",
    "groot:work-area": "cd ./packages/ext-work-area && npm start",
    "groot": "npm-run-all --parallel groot:**",
    "code-stat": "cloc --exclude-dir='node_modules,examples' --include-ext='ts,tsx' ."
  },
  "lint-staged": {
    "packages/**/*.{ts,tsx}": [
      "eslint --ext .ts,.tsx"
    ],
    "packages/**/*.{ts,tsx,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "react": "18.2.0"
  },
  "devDependencies": {
    "@types/react": "18.0.28",
    "@typescript-eslint/eslint-plugin": "5.55.0",
    "@typescript-eslint/parser": "5.55.0",
    "eslint": "8.36.0",
    "eslint-config-prettier": "8.7.0",
    "lint-staged": "13.2.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.4",
    "typescript": "5.0.2"
  }
}